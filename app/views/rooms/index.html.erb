<h2>All Rooms for <%= @hotel_name %></h2>


<%= will_paginate @rooms%>
<table class="table">
  <thead>
    <tr>
      <th>Room type</th>
      <th>Bed type</th>
      <th>Num beds</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        
        <td><%= link_to room.room_type, hotel_room_path(@hotel, room) %></td>
        <td><%= room.bed_type %></td>
        <td><%= room.num_beds %></td>
        <td><%= room.currency %><%= room.price %></td>
        
        <td><%= link_to 'Edit', edit_hotel_room_path(@hotel, room) %></td>
        <td><%= link_to 'Delete', [@hotel, room], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @rooms%>

<br>

<%= link_to 'Add New Room', new_hotel_room_path(@hotel), class: "btn btn-success" %>
<p><%= link_to 'Back', hotels_path %></p>
