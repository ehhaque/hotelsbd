      </div>
   </div>
      
     
   <div class="form-group">
      <%= f.label :bed_type %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :bed_type, class: "form-control" %>  
        </div>
      </div>
   </div>
  <div class="form-group">
      <%= f.label :num_beds %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :num_beds, class: "form-control" %>  
        </div>
      </div>
   </div>
  <div class="form-group">
      <%= f.label :price %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :price, class: "form-control" %>  
        </div>
      </div>
   </div>
  <div class="form-group">
      <%= f.label :currency %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :currency, class: "form-control" %>  
        </div>
      </div>
   </div>
  
  <div class="row">
      <div class="col-sm-3">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>  
