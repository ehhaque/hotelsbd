
<%= form_for([@hotel, @room]) do |f| %>
  
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
      <%= f.label :room_type %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.collection_select(:room_type, RoomType.all, :name, :name, 
          :include_blank => "Please select room type...", class: "form-control") %>  
        </div>
      </div>
   </div>

        
   <div class="form-group">
      <%= f.label :bed_type %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.collection_select(:bed_type, BedType.all, :name, :name, 
          :include_blank => "bed type...", class: "form-control") %>  
        </div>
      </div>
   </div>
  <div class="form-group">
      <%= f.label :num_beds %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :num_beds, class: "form-control" %>  
        </div>
      </div>
   </div>
  <div class="form-group">
      <%= f.label :price, "Price $"  %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :price, class: "form-control" %>  
        </div>
      </div>
   </div>
  
  <div class="row">
      <div class="col-sm-3">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>  
<% end %>
