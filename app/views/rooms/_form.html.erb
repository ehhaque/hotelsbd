      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
      <%= f.label :room_type %>
      <div class="row">
        <div class="col-sm-3">
          <%= f.text_field :room_type, :autofocus => true, class: "form-control" %>  
