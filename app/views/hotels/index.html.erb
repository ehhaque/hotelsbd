



      
           <div style="height:30px;"></div>
            <%= link_to 'Add New Hotel', new_hotel_path,  class: "btn btn-success"%>
            <div style="height:30px;"></div>
            <table class="table">
              <thead>
                <tr>
                  <th>Hotel</th>
                  <th>Desc</th>
                  <th>Star rating</th>
                  <th>Address</th>
                  <th>City</th>
                  <th></th>
                  <th></th>
                  
                  
                </tr>
              </thead>

              <tbody>
                <% @hotels.each do |hotel| %>
                  <tr>
                    <td><%= link_to hotel.name, hotel_rooms_path(hotel) %></td>
                    <td><%= hotel.desc %></td>
                    <td><%= hotel.star_rating %></td>
                    <td><%= hotel.address %></td>
                    <td><%= hotel.city %></td>
                                        
                    <td><%= link_to 'Details', hotel %></td>
                    <td><%= link_to 'Update', edit_hotel_path(hotel) %></td>
                    <td><%= link_to 'Remove Hotel', hotel, method: :delete, data: { confirm: 'Are you sure you want remove hotel permanently?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
   
  </div>
  






