<h1>Bed Types</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bed_types.each do |bed_type| %>
      <tr>
        <td><%= bed_type.name %></td>
        <td><%= link_to 'Edit', edit_bed_type_path(bed_type) %></td>
        <td><%= link_to 'Delete', bed_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Bed type', new_bed_type_path, class: "btn btn-primary" %>
