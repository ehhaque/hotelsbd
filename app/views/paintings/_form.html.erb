<%= form_for @painting, :html => {:multipart => true} do |f| %>
  
  <%= f.hidden_field :room_id %>
  
  <div class="form-group">
      
      <div class="row">
        <div class="col-sm-3">
          <%= f.file_field :image, class: "form-control" %>
        </div>
      </div>
   </div>
  
   

  <div class="row">
      <div class="col-sm-3">
        <%= f.submit "Upload", class: "btn btn-success" %>
      </div>
  </div>  



<% end %>